{% extends 'baseBack.html.twig' %}

{% block title %}Reservationevent index{% endblock %}

{% block body %}
    <h1>Reservationevent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Reservation code</th>
                <th>Event name</th>
                <th>Client last name</th>
                <th>Client name</th>
                <th>Phone number</th>
                <th>Email</th>
                <th>Booked places</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservationevent in reservationevents %}
            <tr>
                <td>{{ reservationevent.codeReservation }}</td>
                <td>{{ reservationevent.codeEvent.nomEvent }}</td>
                <td>{{ reservationevent.codeClient.nom }}</td>
                <td>{{ reservationevent.codeClient.prenom }}</td>
                <td>{{ reservationevent.codeClient.numero }}</td>
                <td>{{ reservationevent.codeClient.email }}</td>
                <td>{{ reservationevent.nbPlace }}</td>
                <td>
                    <a href="{{ path('reservationevent_showBack', {'codeReservation': reservationevent.codeReservation}) }}">show</a>
                    <!--<a href="{{ path('reservationevent_editBack', {'codeReservation': reservationevent.codeReservation}) }}">edit</a>-->
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   <!-- <a href="{{ path('reservationevent_new') }}">Create new</a>-->
{% endblock %}
