{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Dateofpub</th>
                <td>{{ blog.dateofpub ? blog.dateofpub|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ blog.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog.description }}</td>
            </tr>
            <tr>
                <th>Publisher</th>
                <td>{{ blog.publisher }}</td>
            </tr>
            <tr>
                <th>Idblog</th>
                <td>{{ blog.idblog }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blog_index') }}">back to list</a>

    <a href="{{ path('blog_edit', {'idblog': blog.idblog}) }}">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
