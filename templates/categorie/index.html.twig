{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id Catégorie</th>
                <th>Type</th>
                <th>Description</th>
                <th>Nom catégorie</th>
                <th>Date d'ajout</th>
                <th>Nombre des oeuvres</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.idCat }}</td>
                <td>{{ categorie.type }}</td>
                <td>{{ categorie.description }}</td>
                <td>{{ categorie.nomcat }}</td>
                <td>{{ categorie.datecat ? categorie.datecat|date('Y-m-d') : '' }}</td>
                <td>{{ categorie.nbreoeuvre }}</td>
                <td>
                    <a href="{{ path('categorie_edit', {'idCat': categorie.idCat}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categorie_new') }}">Create new</a>
{% endblock %}
