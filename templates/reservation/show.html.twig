    <table class="table">
        <tbody>
            <tr>
                <th>IdReservation</th>
                <td>{{ reservation.idReservation }}</td>
            </tr>
            <tr>
                <th>Idclient</th>
                <td>{{ reservation.idclient }}</td>
            </tr>
