{% extends 'base.html.twig' %}

{% block title %}Oeuvre index{% endblock %}

{% block body %}
    <h1>Oeuvre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdOeuvre</th>
                <th>Nomoeuvre</th>
                <th>Prixoeuvre</th>
                <th>Dateoeuvre</th>
                <th>Imageoeuvre</th>
                <th>Nomcat</th>
                <th>Emailartiste</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for oeuvre in oeuvres %}
            <tr>
                <td>{{ oeuvre.idOeuvre }}</td>
                <td>{{ oeuvre.nomoeuvre }}</td>
                <td>{{ oeuvre.prixoeuvre }}</td>
                <td>{{ oeuvre.dateoeuvre ? oeuvre.dateoeuvre|date('Y-m-d') : '' }}</td>
                <td>{{ oeuvre.imageoeuvre }}</td>
                <td>{{ oeuvre.nomcat }}</td>
                <td>{{ oeuvre.emailartiste }}</td>
                <td>
                    <a href="{{ path('oeuvre_show', {'idOeuvre': oeuvre.idOeuvre}) }}">show</a>
                    <a href="{{ path('oeuvre_edit', {'idOeuvre': oeuvre.idOeuvre}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('oeuvre_new') }}">Create new</a>
{% endblock %}
