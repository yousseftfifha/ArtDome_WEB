{% extends 'base.html.twig' %}

{% block title %}Oeuvre index{% endblock %}

{% block body %}{#
    <h1>Oeuvre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdOeuvre</th>
                <th>Nomoeuvre</th>
                <th>Prixoeuvre</th>
                <th>Dateoeuvre</th>
                <th>Imageoeuvre</th>
                <th>Nomcat</th>
                <th>Emailartiste</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for oeuvre in oeuvres %}
            <tr>
                <td>{{ oeuvre.idOeuvre }}</td>
                <td>{{ oeuvre.nomoeuvre }}</td>
                <td>{{ oeuvre.prixoeuvre }}</td>
                <td>{{ oeuvre.dateoeuvre ? oeuvre.dateoeuvre|date('Y-m-d') : '' }}</td>
                <td>{{ oeuvre.imageoeuvre }}</td>
                <td>{{ oeuvre.nomcat }}</td>
                <td>{{ oeuvre.emailartiste }}</td>
                <td>
                    <a href="{{ path('oeuvre_show', {'idOeuvre': oeuvre.idOeuvre}) }}">show</a>
                    <a href="{{ path('oeuvre_edit', {'idOeuvre': oeuvre.idOeuvre}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('oeuvre_new') }}">Create new</a>
    #}

    <section class="item content">
        <div class="container toparea">
            <div class="underlined-title">
                <div class="editContent">
                    <h1 class="text-center latestitems">OUR PRODUCTS</h1>
                </div>
                <div class="wow-hr type_short">
                <span class="wow-hr-h">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                </span>
                </div>
            </div>
            {% for oeuvre in oeuvres %}

            <div class="row">
                <div class="col-md-4">
                    <div class="productbox">
                        <div class="fadeshop">
                            <div class="captionshop text-center" style="display: none;">

                                <h3>{{ oeuvre.nomoeuvre }}</h3>
                                <p>
                                    {{ oeuvre.dateoeuvre ? oeuvre.dateoeuvre|date('Y-m-d') : '' }}
                                </p>
                                <p>
                                <form id="id" class="edd_form" action="<  {{ path('cart_new', {'idOeuvre': oeuvre.idOeuvre}) }}" method="POST">

                                    <input type="hidden" name="edd_action" value={{ oeuvre.idOeuvre  }}>
                                    <a href="{{ path('cart_new', {'idOeuvre': oeuvre.idOeuvre}) }}" class="learn-more detailslearn"><i class="fa fa-shopping-cart"></i> Purchase</a>
                                    <a href="#" class="learn-more detailslearn"><i class="fa fa-link"></i> Details</a>
                                </form>

                                </p>
                            </div>
                            <span class="maxproduct"><img src="{{app.request.basepath}}/Front/GFX/{{oeuvre.imageoeuvre}}" alt=""></span>
                        </div>
                        <div class="product-details">
                            <a href="#">exposition
                                <h1>{{ oeuvre.nomoeuvre }}</h1>
                            </a>
                            <span class="price">
					    <span class="edd_price">{{ oeuvre.prixoeuvre }} TND</span>

					    </span>

                        </div>
                    </div>

                </div>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
            </div>

        </div>
        </div>

    </section>

{% endblock %}
