{% extends 'base.html.twig' %}

{% block title %}Cart index{% endblock %}

{% block body %}
    {#  <h1>Cart index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idcart</th>
                <th>Nom Oeuvre</th>
                <th>Quantity</th>
                <th>Prix</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cart in carts %}
            <tr>
                <td>{{ cart.idcart }}</td>
                <td>{{ cart.oeuvreid.nomoeuvre }}</td>
                <td>{{ cart.quantity }}</td>
                <td>{{ cart.oeuvreid.prixoeuvre }}</td>



                <td>
                    <a href="{{ path('cart_show', {'idcart': cart.idcart}) }}">show</a>
                    <a href="{{ path('cart_edit', {'idcart': cart.idcart}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cart_new') }}">Create new</a>#}
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="text-pageheader">
                    <div class="subtext-image" data-scrollreveal="enter bottom over 1.7s after 0.1s">
                        Shop
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% set tot = 0 %}

    <section class="item content">
        <div class="container toparea">
            <div class="underlined-title">
                <div class="editContent">
                    <h1 class="text-center latestitems">MAKE PAYMENT</h1>
                </div>
                <div class="wow-hr type_short">
			<span class="wow-hr-h">
			<i class="fa fa-star"></i>
			<i class="fa fa-star"></i>
			<i class="fa fa-star"></i>
			</span>
                </div>
            </div>
            <div id="edd_checkout_wrap" class="col-md-8 col-md-offset-2">
                <form id="edd_checkout_cart_form" method="post">
                    <div id="edd_checkout_cart_wrap">
                        <table id="edd_checkout_cart" class="ajaxed">
                            <thead>
                            <tr class="edd_cart_header_row">
                                <th class="edd_cart_item_img">
                                    Item Image
                                </th>
                                <th class="edd_cart_item_name">
                                    Item Name
                                </th>
                                <th class="edd_cart_item_price">
                                    Item Price
                                </th>
                                <th class="edd_cart_actions">
                                    Quantity
                                </th>
                                <th class="edd_cart_actions">
                                    Actions
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for cart in carts %}
                            <tr class="edd_cart_item" id="edd_cart_item_0_25" data-download-id="25">
                                <td class="edd_cart_item_name">
                                    <div class="edd_cart_item_image">
                                        <img width="25" height="25" src="{{app.request.basepath}}/Front/GFX/{{cart.oeuvreid.imageoeuvre}}" alt="">
                                    </div>
                                </td>
                                <td class="edd_cart_item_name">
                                    <span class="edd_checkout_cart_item_title">{{ cart.oeuvreid.nomoeuvre }}</span>
                                </td>
                                <td class="edd_cart_item_price">
                                    {{ cart.oeuvreid.prixoeuvre }}
                                    {% set tot = tot+cart.oeuvreid.prixoeuvre %}

                                </td>
                                <td class="edd_cart_item_price">
                                    {{ cart.quantity }}
                                </td>
                                <td class="edd_cart_actions">
                                    <a class="edd_cart_remove_item_btn" href="#">

                                    <a href="{{ path('cart_show', {'idcart': cart.idcart}) }}">show</a>
                                    <a href="{{ path('cart_edit', {'idcart': cart.idcart}) }}">edit</a>


                                    </a>
                                </td>
                            </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>

                            <tr class="edd_cart_footer_row edd_cart_discount_row" style="display:none;">
                                <th colspan="5" class="edd_cart_discount">
                                </th>
                            </tr>
                            <tr class="edd_cart_footer_row">
                                <th colspan="5" class="edd_cart_total">
                                    Total: <span class="edd_cart_amount" data-subtotal="11.99" data-total="11.99"> {{ tot }}
</span>
                                </th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </form>
                <div id="edd_checkout_form_wrap" class="edd_clearfix">
                    <form id="edd_purchase_form" class="edd_form" action="{{ path('pending_orders_new') }}" method="POST">
                        <fieldset id="edd_purchase_submit">
                            <p id="edd_final_total_wrap">
                                <strong>Purchase Total:</strong>
                                <span class="edd_cart_amount" data-subtotal="11.99" data-total="11.99">{{ tot }}</span>
                            </p>
                            <input type="hidden" name="edd_action" value="purchase">
                            <input type="hidden" name="edd-gateway" value="manual">

                            <input type="submit" class="edd-submit button" id="edd-purchase-button" name="edd-purchase"   value="Purchase">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
