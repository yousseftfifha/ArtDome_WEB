{% extends 'base.html.twig' %}

{% block title %}Orders index{% endblock %}

{% block body %}
    <h1>Orders index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Orderid</th>
                <th>Dueamount</th>
                <th>Innonumber</th>
                <th>Orderdate</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.orderid }}</td>
                <td>{{ order.dueamount }}</td>
                <td>{{ order.innonumber }}</td>
                <td>{{ order.orderdate ? order.orderdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.status }}</td>
                <td>
                    <a href="{{ path('orders_show', {'orderid': order.orderid}) }}">show</a>
                    <a href="{{ path('orders_edit', {'orderid': order.orderid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('orders_new') }}">Create new</a>
{% endblock %}
