    <h1>Orders</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Orderid</th>
                <td>{{ order.orderid }}</td>
            </tr>
            <tr>
                <th>Dueamount</th>
                <td>{{ order.dueamount }}</td>
            </tr>
